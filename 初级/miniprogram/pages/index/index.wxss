.body {
  position: relative;
  height:100vh;
  overflow: hidden;
}
.footer {
  position: absolute;
  bottom: 0px;
  width:375px;
  height:94px;
  background:rgba(49,114,238,1);
  text-align: center;
}
.footer_content {
  color: white;
  margin-top: 17px;
  
}
.footer_content text{
  width:42px;
  height:25px;
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:25px;
  letter-spacing:2px;
}
.footer_content .upload{
  height: 27px;
  width: 27px;
  vertical-align:bottom;
  margin-right: 12px;
}
.top_text {
